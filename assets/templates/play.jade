.row
    .col-xs-12
        h2 Now Playing: {{playing}}
.row
    .col-xs-12
        .play-controls.btn-group.btn-group-lg
            button.btn.btn-default(type="button", ng-click="backward()")
                span.glyphicon.glyphicon-backward
            button.btn.btn-default(type="button", ng-click="stop()")
                span.glyphicon.glyphicon-stop
            button.btn.btn-default(type="button", ng-click="toggle()")
                span.glyphicon(ng-class="{'glyphicon-pause' : !isPaused, 'glyphicon-play' : isPaused}")
            button.btn.btn-default(type="button", ng-click="forward()")
                span.glyphicon.glyphicon-forward

