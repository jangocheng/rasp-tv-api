html
    head
        title= title
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="/styles/libs/bootstrap.min.css", rel="stylesheet")
        link(href="/styles/libs/loading-bar.min.css", rel="stylesheet")
        style(type="text/css")
            body {
                padding-top: 2%;
                padding-bottom: 2%;
            }

            .error-message {
                margin-top: 2%;
            }

            .main-view {
                margin-top: 3%;
            }
    body
        .container(ng-app="raspTv")
            .row(ng-controller="navCtrl")
                .col-xs-12
                    ul.nav.nav-pills.nav-justified
                        li(ng-class="isActive('movies')")
                            a(href="#/") Movies
                        li(ng-class="isActive('shows')")
                            a(href="#/shows") TV Shows
                        li(ng-class="isActive('play')", ng-show="isPlaying")
                            a(href="#/play") Now Playing
            .row.error-message(ng-controller="errorCtrl", ng-show="error")
                .col-xs-12
                    .alert.alert-danger.alert-dismissable
                        button.close(type="button", ng-click="close()") &times;
                        strong Error: {{error.config.method}} {{error.status}} {{error.config.url}}
                        br
                        |  {{error.data.msg}}
            div.main-view(ng-view)
        if production
            script(type="text/javascript", src="/js/rasptv.min.js")
        else
            script(type="text/javascript", src="/js/libs/angular.js")
            script(type="text/javascript", src="/js/libs/angular-animate.js")
            script(type="text/javascript", src="/js/libs/angular-route.js")
            script(type="text/javascript", src="/js/libs/angular-resource.js")
            script(type="text/javascript", src="/js/libs/loading-bar.js")
            script(type="text/javascript", src="/js/services.js")
            script(type="text/javascript", src="/js/app.js")
